{
  "name": "coach-stm",
  "version": "1.1.2",
  "description":
    "The Coach helps you achieve your goals, by simplifying your tasks",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "prepublishOnly": "npm run rebuild:es && npm run rebuild:cjs",
    "postpublish": "npm run clean",
    "build": "npm run build:cjs && npm run build:es",
    "build:cjs": "cross-env BABEL_ENV=commonjs babel src/ -d lib -s",
    "build:es": "babel src/ -d es -s",
    "clean": "npm run clean:es && npm run clean:cjs",
    "clean:cjs": "rimraf lib/",
    "clean:es": "rimraf es/",
    "rebuild:cjs": "npm run clean:cjs & npm run build:cjs",
    "rebuild:es": "npm run clean:es & npm run build:es"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artalar/coach-stm.git"
  },
  "keywords": [
    "react",
    "state",
    "state-manager",
    "predictable",
    "functional",
    "function-tree",
    "no-redux"
  ],
  "author": "artalar",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/artalar/coach-stm/issues"
  },
  "homepage": "https://github.com/artalar/coach-stm#readme",
  "dependencies": {
    "react": "^16.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.40",
    "@babel/core": "^7.0.0-beta.40",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.40",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "cross-env": "^5.1.3",
    "rimraf": "^2.6.2"
  }
}
